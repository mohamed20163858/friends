<% if user_signed_in? %>
<h1>Friends</h1>

<table class="table table-striped table-bordered table-hover" id="friends">
  <thead class="table-dark">
    <tr>
      <!-- <th scope="col">#</th> -->
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <!-- <th scope="col">User_id</th> -->
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each_with_index do |friend| %>
    <% if friend.user == current_user %>
    <tr id="<%= dom_id friend %>">
      <%= render friend %>
      <td>
        <%= button_to "Delete", friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
      </td>
    </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
<% else %>
<h1>Home#index</h1>
<p>this is my first complete friends app </p>
<% end %>
